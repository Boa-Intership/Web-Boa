{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "ui": ["src/ui/index.ts"],
      "ui/*": ["./src/ui/*"],
      "pages/*": ["./src/pages/*"],
      "router/*": ["./src/router/*"],
      "@config": ["src/config/index.ts"],
      "@config/*": ["src/config/*"]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "vitest/globals",
      "@testing-library/jest-dom",
      "vite/client"
    ]
  },
  "include": ["src"]
}
