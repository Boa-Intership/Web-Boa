{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "ui": ["src/ui/index.ts"],
      "ui/*": ["./src/ui/*"],
      "pages/*": ["./src/pages/*"],
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src"]
}
