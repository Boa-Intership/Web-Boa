{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/shared/components/*"],
      "features/*": ["./src/features/*"],
      "homeComponents": ["./src/features/home/presentation/components/index.ts"],
      "assets": ["./src/assets/*"],
      "routes/*": ["./src/features/home/presentation/screens/index.ts"],
      "pages/*": ["./src/pages/*"],
      "information": ["./src/features/Information/presentation/components/index.ts"],
      "information/*": ["./src/features/Information/presentation/components/*"]
    },
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src"]
}
